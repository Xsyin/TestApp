<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="iie.dcs.test.MainActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/get_pub_key_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_pk_to"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="获取公钥" />

    <Button
        android:id="@+id/sign_data_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/search"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/search"
        android:text="SignData" />


    <Button
        android:id="@+id/send_pk_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_data_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="发送公钥至" />

    <TextView
        android:id="@+id/msg_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/get_pub_key_btn"
        android:layout_marginTop="21dp"
        android:text="手机号：" />

    <TextView
        android:id="@+id/msg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msg_text3"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@+id/msg_text2"
        android:layout_toRightOf="@+id/msg_text2"
        android:text="  " />

    <TextView
        android:id="@+id/msg_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/msg_text"
        android:layout_alignBottom="@+id/msg_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="公钥：" />

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/public_key"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="手机号" />

    <EditText
        android:id="@+id/public_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/search"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="公钥" />

    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="写入通讯录" />
</RelativeLayout>
